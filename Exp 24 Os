#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>

int main(){
    int fd;
    char buffer[100];

    fd = open("sample.txt", O_CREAT | O_WRONLY, 0644);

    write(fd, "Hello UNIX System Calls", 23);
    close(fd);

    fd = open("sample.txt", O_RDONLY);
    read(fd, buffer, 23);
    buffer[23]='\0';

    printf("File Content: %s\n",buffer);
    close(fd);

    return 0;
}
